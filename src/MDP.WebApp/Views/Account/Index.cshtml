@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Authentication.Google
@using Microsoft.AspNetCore.Authentication.Facebook
@{

}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>

    <!--Title-->
    <h2>Account.Index</h2>
    <hr />

    <!--LoginByGoogle-->
    <form asp-action="ExternalLogin" asp-route-externalScheme="@GoogleDefaults.AuthenticationScheme" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
        <input type="submit" value="LoginByGoogle" /><br />
        <br />
    </form>
    <hr />

    <!--LoginByFacebook-->
    <form asp-action="ExternalLogin" asp-route-externalScheme="@FacebookDefaults.AuthenticationScheme" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
        <input type="submit" value="LoginByFacebook" /><br />
        <br />
    </form>
    <hr />

</body>
</html>