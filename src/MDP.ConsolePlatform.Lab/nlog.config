<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogFile="nlog-internal.log"
      internalLogLevel="Warn" >

  
  <!-- Targets -->
  <targets async="true">
    <!-- FileLog -->
    <target name="FileLog" xsi:type="File" 
            filename="log/${gdc:item=ApplicationName}.NLog-${cached:cached=true:Inner=${date:format=yyyyMMdd}:CacheKey=${shortdate}}.log"
            archiveFileName="log/${gdc:item=ApplicationName}.NLog-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            layout="${date:format=yyyy-MM-dd HH\:mm\:ss.fff} [${threadid}] ${level:uppercase=true} ${logger} - ${message}${when:when=length('${exception}')>0:Inner=${newline}}${exception:format=tostring}"
    ></target>    
  </targets>

  
  <!-- Rules -->
  <rules>
    <!-- FileLog -->
    <logger writeTo="FileLog" name="*" minlevel="Trace" />
  </rules>
  
  
</nlog>