<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>11.0</LangVersion>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\MDP.Registration\MDP.Registration.csproj" />
    <ProjectReference Include="..\MDP.DevKit.OpenAI\MDP.DevKit.OpenAI.csproj" PrivateAssets="All" />
    <ProjectReference Include="..\MDP.DevKit.OpenAI.Accesses\MDP.DevKit.OpenAI.Accesses.csproj" PrivateAssets="All" />
    <ProjectReference Include="..\MDP.Network.Rest\MDP.Network.Rest.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageId>MDP.DevKit.OpenAI</PackageId>
  </PropertyGroup>
  <ItemGroup>
    <None Include="$(OutputPath)\MDP.DevKit.OpenAI*.dll" Pack="true" PackagePath="lib\$(TargetFramework)\" />
  </ItemGroup>

  <PropertyGroup>
    <authors>CLK Software Studio</authors>
    <copyright>Copyright Â© 2014 CLK Software Studio</copyright>
    <description>MDP.Net Library</description>
    <PackageIcon>Package.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Clark159/MDP.Net</PackageProjectUrl>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\..\Package.png" Pack="true" PackagePath="\Package.png" />
    <None Include="..\..\README.md" Pack="true" PackagePath="\README.md" />
  </ItemGroup>

</Project>