@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="~/index.css" rel="stylesheet" />
    <script src="~/mdp.web.js"></script>
    <script language="javascript">
        window.onload = function () {
            
            // AddTodo
            document.getElementById("addTodo.button").addEventListener("click", event => {

                // Variables
                const name = document.getElementById("addTodo.name").value;
                const isComplete = document.getElementById("addTodo.isComplete").checked;
                              
                // ActionModel
                var actionModel = {};
                actionModel.name = name;
                actionModel.isComplete = isComplete;

                // Post
                postRequst("/todo/add", actionModel)

                    // Success
                    .then(function (response) {
                        document.getElementById("addTodo.result").innerText = JSON.stringify(response, null, 2);
                    })

                    // Error
                    .catch(function (error) {
                        document.getElementById("addTodo.result").innerText = JSON.stringify(error, null, 2);
                    });
            });

            // FindAllTodo
            document.getElementById("findAllTodo.button").addEventListener("click", event => {

                // Variables

                // ActionModel
                var actionModel = {};

                // Post
                postRequst("/todo/findAll", actionModel)

                    // Success
                    .then(function (response) {
                        document.getElementById("findAllTodo.result").innerText = JSON.stringify(response, null, 2);
                    })

                    // Error
                    .catch(function (error) {
                        document.getElementById("findAllTodo.result").innerText = JSON.stringify(error, null, 2);
                    });
            });

            // FindLastSnapshot
            document.getElementById("findLastSnapshot.button").addEventListener("click", event => {

                // Variables

                // ActionModel
                var actionModel = {};

                // Post
                postRequst("/snapshot/findLast", actionModel)

                    // Success
                    .then(function (response) {
                        document.getElementById("findLastSnapshot.result").innerText = JSON.stringify(response, null, 2);
                    })

                    // Error
                    .catch(function (error) {
                        document.getElementById("findLastSnapshot.result").innerText = JSON.stringify(error, null, 2);
                    });
            });
        };
    </script>
</head>
<body>

    <!--Title-->
    <h2>SleepZone.Todos</h2>
    <hr />

    <!--AddTodo-->
    <input type="button" id="addTodo.button" value="AddTodo" /><br />
    <input type="checkbox" id="addTodo.isComplete" value="false" />
    <input type="text" id="addTodo.name" value="Todo001" /><br />
    <div id="addTodo.result"></div><br />
    <hr />

    <!--FindAllTodo-->
    <input type="button" id="findAllTodo.button" value="FindAllTodo" /><br />
    <div id="findAllTodo.result"></div><br />
    <hr />

    <!--FindLastSnapshot-->
    <input type="button" id="findLastSnapshot.button" value="FindLastSnapshot" /><br />
    <div id="findLastSnapshot.result"></div><br />
    <hr />

</body>
</html>